{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "src/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "strict": true,
    "types": ["chrome", "node"]
  }
}
